<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.petshopbook.LoginController"
      spacing="10" alignment="CENTER" style="-fx-padding: 20; -fx-background-color: #f9f9f9; -fx-border-color: #cccccc; -fx-border-width: 2;">

    <!-- Título do Login -->
    <Label text="Login" style="-fx-font-size: 18; -fx-font-weight: bold;"/>

    <!-- Campos de Login -->
    <TextField fx:id="nomeField" promptText="Nome" style="-fx-pref-width: 200;"/>
    <TextField fx:id="cpfField" promptText="CPF" style="-fx-pref-width: 200;"/>

    <!-- Botão de Login -->
    <Button text="Entrar" onAction="#handleLogin" style="-fx-background-color: #4CAF50; -fx-text-fill: white;"/>

    <!-- Botões de Funcionalidades (Inicialmente Desabilitados) -->
    <Button fx:id="pesquisaAnimalButton" text="Pesquisa de Animal" disable="true" />
    <Button fx:id="pesquisaClienteButton" text="Pesquisa de Cliente" disable="true" />
    <Button fx:id="cadastrarClienteButton" text="Cadastrar Cliente" disable="true" />
</VBox>
